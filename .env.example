# ===========================================
# Text-to-SQL Agent - Environment Variables
# ===========================================
# Copy this file to backend/.env and fill in values
# Frontend uses .env.local (optional)

# -----------------
# Azure OpenAI (LLM)
# -----------------
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# -----------------
# Azure OpenAI (Embeddings)
# -----------------
AZURE_EMBEDDING_API_KEY=your-embedding-api-key-here
AZURE_EMBEDDING_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_EMBEDDING_API_VERSION=2024-12-01-preview
AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# -----------------
# PostgreSQL (Target Database)
# -----------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password

# -----------------
# ChromaDB (Vector Store)
# -----------------
CHROMADB_PERSIST_DIRECTORY=./chroma_data

# -----------------
# Session Storage
# -----------------
SESSION_STORAGE_TYPE=memory
SESSION_STORAGE_PATH=./sessions.db

# -----------------
# API Server
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# -----------------
# SQL Settings
# -----------------
SQL_MAX_ROWS=1000
SQL_TIMEOUT_SECONDS=30
