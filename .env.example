# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure OpenAI Embedding Configuration
AZURE_EMBEDDING_API_KEY=your-embedding-api-key-here
AZURE_EMBEDDING_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_EMBEDDING_API_VERSION=2024-12-01-preview
AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# ChromaDB Configuration
CHROMADB_PERSIST_DIRECTORY=./chroma_data

# PostgreSQL (target database for SQL execution)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password

# Session Storage Configuration
SESSION_STORAGE_TYPE=memory  # Options: memory, sqlite
SESSION_STORAGE_PATH=./sessions.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# SQL Validation Settings
SQL_MAX_ROWS=1000
SQL_TIMEOUT_SECONDS=30
